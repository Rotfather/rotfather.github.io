doctype html
html(lang="en")
  head
    -var title = locals.content.pageTitle
    -var description = locals.content.pageDescriptions
    block title
    link(rel="stylesheet" type="text/css" href="#{context_path}/assets/css/main.css")  
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-89986198-1', 'auto');
      ga('send', 'pageview');
  body
  -var content = locals.content
    .navbar
      .container-fluid
        .navbar-header
          button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false")
            span.sr-only
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href=content.language == 'pt' ? '/pt' : '/')
            img.hidden-xs(src="#{context_path}/assets/images/brand.png")
            img.visible-xs(src="#{context_path}/assets/images/brand-xs.png")
        .collapse.navbar-collapse(id="navbar-collapse")
          ul.nav.navbar-nav
            li  
              a(href="game.html")= content.nav.game 
            li  
              a(href="products.html")= content.nav.product  
            li  
              a(href="project.html")= content.nav.project       
            li  
              a(href="contact.html")= content.nav.contact   
            if content.language == 'pt'
              li
                a.js-locale-change(data-language="en") change language to en
            if content.language == 'en'
              li
                a.js-locale-change(data-language="pt") change language to pt  
    block content
    include ./footer.jade
    script(src='#{context_path}/assets/js/bundle.js')
